---
import baseStyles from "@styles/base.module.scss";
const { title, description, favicon } = Astro.props;
import Navbar from "@components/Navbar.astro";
import Particles from "astro-particles";
import type { ISourceOptions } from "tsparticles-engine";

const options: ISourceOptions = {
  background: {
    color: "#000",
  },
  fullScreen: {
    zIndex: -1,
  },
  particles: {
    number: {
      value: 50,
    },
    move: {
      enable: true,
    },
    opacity: {
      value: 0.8,
    },
    size: {
      value: 5,
    },
    light: {
      area: {
        gradient: {
          start: "rgba(255, 255, 255, 1)",
          stop: "rgba(255, 255, 255, 0)",
        },
        radius: 50,
      },
    },
    shadow: {
      enable: true,
      color: "rgba(228, 38, 235, 0.5)",
      blur: 10,
    },
  },
};
import { ViewTransitions } from "astro:transitions";
---

<html lang="en" transition:name="root" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/png" href={favicon} />
    <link rel="stylesheet" href="/styles.css" />
    <script is:inline defer src="/plugins.js"></script>
    <ViewTransitions />
  </head>
  <body transition:name="fade">
    <script>
      import type { Engine } from "tsparticles-engine";
      import { loadSlim } from "tsparticles-slim";

      declare global {
        interface Window {
          particlesInit: (engine: Engine) => Promise<void>;
        }
      }

      window.particlesInit = async function (engine: Engine) {
        await loadSlim(engine);
      };
    </script>
    <Navbar />
    <main class={baseStyles.main} transition:name="hero">
      <slot />
    </main>
    <Particles id="tsparticles" options={options} init="particlesInit" />
  </body>
</html>
